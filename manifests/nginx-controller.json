{
  "kind":"ReplicationController",
  "apiVersion":"v1",
  "metadata":{
     "name":"nginx",
     "labels":{
        "app":"nginx"
     }
  },
  "spec":{
     "replicas":3,
     "selector":{
        "app":"nginx"
     },
     "template":{
        "metadata":{
           "labels":{
              "app":"nginx"
           }
        },
        "spec":{
           "containers":[
              {
                 "name":"nginx",
                 "image":"121503602521.dkr.ecr.us-east-2.amazonaws.com/nginx2:1",
                 "ports":[
                    {
                       "name":"http-server",
                       "containerPort":80
                    }
                 ]
              }
           ]
        }
     }
  }
}